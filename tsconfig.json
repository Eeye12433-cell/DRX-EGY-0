{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "./App.tsx",
    "./index.tsx",
    "./constants.ts",
    "./types.ts",
    "./components/**/*.ts",
    "./components/**/*.tsx",
    "./services/**/*.ts",
    "./services/**/*.tsx",
    "./views/**/*.ts",
    "./views/**/*.tsx",
    "./vite.config.ts",
    "./vite-env.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src",
    "coverage"
  ]
}
